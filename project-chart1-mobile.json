{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Global primary energy consumption",
      "subtitle": "Global primary energy consumption by source, Source: Our World in Data",
      "subtitleFontSize": 10,
      "subtitleFontStyle": "italic",
      "anchor": "start"
    },
    "height": 150,
    "width": 150,
    "data": {
      "url": "https://raw.githubusercontent.com/harrywright25/harrywright25.github.io/main/Project_chart1.csv"
    },
    "mark": {"type": "line", "size": 2, "point": false},
    "selection": {
      "Type": {
        "type": "single",
        "fields": ["Energy Source"],
        "bind": {
          "input": "select",
          "options": [
            null,
            "Biofuels (TWh, substituted energy)",
            "Coal (TWh, substituted energy)",
            "Gas (TWh, substituted energy)",
            "Hydropower (TWh, substituted energy)",
            "Solar (TWh, substituted energy)",
            "Wind (TWh, substituted energy)",
            "Oil (TWh, substituted energy)",
            "Nuclear (TWh, substituted energy)",
            "Other renewables (TWh, substituted energy)",
            "Traditional biomass (TWh, substituted energy)"
          ],
          "name": "Source"
        }
      }
    },
    "transform": [{"filter": {"selection": "Type"}}],
    "encoding": {
      "x": {
        "field": "Year",
        "type": "temporal",
        "axis": {"grid": false},
        "title": null
      },
      "y": {
        "field": "Values",
        "type": "quantitative",
        "title": "Energy Consumption (TWh)",
        "axis": {"grid": false}
      },
      "color": {
        "field": "Energy Source",
        "type": "nominal",
        "scale": {"scheme": "darkmulti"},
        "legend": {"title":null, "labelFontSize":9}
      },
      "tooltip": [
        {"field": "Energy Source", "type": "nominal"},
        {"field": "Values", "title": "Energy cons"}
      ]
    }
  }