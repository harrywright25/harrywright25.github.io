{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/harrywright25/harrywright25.github.io/main/data-pps1.csv"
    },
    "height": 150,
    "width": 150,
    "encoding": {
      "y": {"field": "x", "type": "nominal", "title": null,"axis":{"labelFontSize":8}},
      "x": {"field": "y", "type": "nominal", "title": null, "axis":{"labelFontSize":8}}
    },
    "layer": [
      {
        "mark": "rect",
        "encoding": {
          "color": {
            "field": "ppscore",
            "type": "quantitative",
            "title": "PP Score",
            "legend":null
          }
        }
      },
      {
        "mark": "text",
        "encoding": {
          "text": {"field": "ppscore", "type": "quantitative", "format": ".3f"}
        }
      }
    ],
    "config": {"axis": {"grid": true, "tickBand": "extent"}}
  }